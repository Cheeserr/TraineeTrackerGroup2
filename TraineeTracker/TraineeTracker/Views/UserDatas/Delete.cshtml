@model TraineeTracker.Models.ViewModels.UserDataViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <table class="table table-borderless" style="color:white;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayName("First Name")
                </th>
                <th>
                    @Html.DisplayName("Last Name")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Education)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Experience)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Biography)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skills)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Title)
                </td>
                <td>
                    @Html.DisplayFor(model => model.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Education)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Experience)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Activity)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Biography)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Skills)
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div style="text-align: center;">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index"><button type="button" class="btn btn-light" style="margin-left: 5px;">Back</button></a>
    </form>
</div>
